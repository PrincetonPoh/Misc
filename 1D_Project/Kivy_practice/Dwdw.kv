WindowManager:
	MainWindow:
	SecondWindow:

<MainWindow>:
	name: 'main'
	btn_1: btn_1
	GridLayout:
		cols: 1

		GridLayout:
			cols: 2
			size_hint: 3, 3 
			Button:
				text: 'Refresh'
				font_size: 40
				size_hint: 0.5,1
			GridLayout:
				cols:1
				Button:
					id: btn_1
					text: 'LvL   7'
					on_release: root.btn7()
